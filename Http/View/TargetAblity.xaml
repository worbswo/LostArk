            <ComboBox
                Grid.Row="14"
                Grid.Column="2"
                FontSize="18"
                SelectedIndex="{Binding  DataContext.TargetAblityVM.SelectFigureItems[6],Mode=TwoWay}"
                ItemsSource="{Binding DataContext.TargetAblityVM.Figure}"
