                FontFamily="MaruBuri"
                HorizontalAlignment="Left"></TextBlock>
            <ComboBox
                Name="Combo1"
                Grid.Row="2"
                FontSize="18"
                SelectedItem="{Binding  DataContext.TargetAblityVM.SelectItems[0],Mode=TwoWay}"
                command:CommandBehavior.Command="{Binding DataContext.TargetAblityVM.MouseDownCommand}"
                command:CommandBehavior.Event="SelectionChanged"
                ItemsSource="{Binding DataContext.TargetAblityVM.Options}"
                VerticalAlignment="Center">
            </ComboBox>
            <Rectangle
                Grid.Row="2"
                Grid.ColumnSpan="3"
                Height="1"
                Fill="Gray"
                VerticalAlignment="Bottom"></Rectangle>
            <ComboBox
                Name="Combo2"
                Grid.Row="4"
                FontSize="18"

                SelectedItem="{Binding  DataContext.TargetAblityVM.SelectItems[1],Mode=TwoWay}"
                command:CommandBehavior.Command="{Binding DataContext.TargetAblityVM.MouseDownCommand}"
                command:CommandBehavior.Event="SelectionChanged"
                ItemsSource="{Binding DataContext.TargetAblityVM.Options}"
                VerticalAlignment="Center">
            </ComboBox>
            <Rectangle
                Grid.Row="4"
                Grid.ColumnSpan="3"
                Height="1"
                Fill="Gray"
                VerticalAlignment="Bottom"></Rectangle>
            <ComboBox
                Name="Combo3"
