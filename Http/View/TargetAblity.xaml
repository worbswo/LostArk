                VerticalAlignment="Center">
                
            </ComboBox>
            <ComboBox
                Grid.Row="6"
                Grid.Column="2"
                FontSize="18"
                SelectedIndex="{Binding  DataContext.TargetAblityVM.SelectFigureItems[2],Mode=TwoWay}"
