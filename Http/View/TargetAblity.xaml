            </ComboBox>
            <Rectangle
                Grid.Row="12"
                Grid.ColumnSpan="3"
                Height="1"
                Fill="Gray"
                VerticalAlignment="Bottom"></Rectangle>
            <ComboBox
                Name="Combo7"
                Grid.Row="14"
                FontSize="18"
                SelectedItem="{Binding  DataContext.TargetAblityVM.SelectItems[6],Mode=TwoWay}"
                command:CommandBehavior.Command="{Binding DataContext.TargetAblityVM.MouseDownCommand}"
                command:CommandBehavior.Event="SelectionChanged"
                ItemsSource="{Binding DataContext.TargetAblityVM.Options}"
                VerticalAlignment="Center">
            </ComboBox>
            <Rectangle
                Grid.Row="14"
                Grid.ColumnSpan="3"
                Height="1"
                Fill="Gray"
                VerticalAlignment="Bottom"></Rectangle>
            <ComboBox
                Grid.Row="2"
                Grid.Column="3"
                FontSize="18"
                SelectedIndex="{Binding  DataContext.TargetAblityVM.SelectFigureItems[0],Mode=TwoWay}"
                ItemsSource="{Binding DataContext.TargetAblityVM.Figure}"
                VerticalAlignment="Center">
                
            </ComboBox>
            <ComboBox
                Grid.Row="4"
                Grid.Column="2"
                FontSize="18"
                SelectedIndex="{Binding  DataContext.TargetAblityVM.SelectFigureItems[1],Mode=TwoWay}"
